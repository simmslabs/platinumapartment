# Cron Job Configuration
CRON_SECRET_TOKEN=your-secret-token-here

# Email Configuration (using Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=notifications@yourdomain.com

# SMS Configuration Options

# Option 1: Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Option 2: Custom SMS Webhook
SMS_WEBHOOK_URL=https://your-sms-service.com/api/send
SMS_WEBHOOK_TOKEN=your-webhook-token
SMS_FROM_NUMBER=YourBrand

# Option 3: Enable/Disable SMS
ENABLE_SMS=true

# Cloudflare R2 Configuration
# Get these values from your Cloudflare dashboard

# Your Cloudflare Account ID (found in the dashboard sidebar)
R2_ACCOUNT_ID=your_cloudflare_account_id_here

# R2 API Token credentials (create in R2 API tokens section)
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# Your R2 bucket name (create in R2 Object Storage section)
R2_BUCKET_NAME=apartment-images

# Optional: Custom domain for serving images
# If you set up a custom domain in R2, uncomment and set this:
# R2_PUBLIC_URL=https://images.yourdomain.com

# If R2 is not configured, images will be stored as base64 in the database
# This provides a fallback so the application continues to work without R2
